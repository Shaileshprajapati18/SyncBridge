<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/yellow"
    tools:context=".full_details">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="10dp"
        app:fabCradleVerticalOffset="10dp"
        app:backgroundTint="@color/yellow"
        app:actionMenuTextColor="@color/white">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_back"
            android:layout_marginEnd="10dp"
            app:tint="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Settings"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/star"/>

    </com.google.android.material.bottomappbar.BottomAppBar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/inner_button_background"
            android:orientation="vertical"
            android:layout_below="@id/title"
            android:backgroundTint="@color/black"
            android:padding="10dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/start_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="180dp">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/inner_button_background"
                    android:src="@drawable/profile" />

            </com.google.android.material.card.MaterialCardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/name_overlay"
                        android:elevation="5dp"
                        android:text="First name"
                        android:padding="5dp"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                         />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/name_overlay"
                        android:elevation="10dp"
                        android:padding="5dp"
                        android:text="Last name"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                       />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/name_overlay"
                        android:elevation="10dp"
                        android:text="Shailesh"
                        android:padding="5dp"
                        android:textColor="@android:color/white"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/name_overlay"
                        android:elevation="10dp"
                        android:padding="5dp"
                        android:text="Prajapati"
                        android:textColor="@android:color/white"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:background="@drawable/name_overlay"
                    android:padding="5dp"
                    android:text="Mobile number"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
               />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:background="@drawable/name_overlay"
                    android:padding="5dp"
                    android:text="+919316452822"
                    android:textColor="@android:color/white"
                    android:textSize="23sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:text="E-mail"
                    android:background="@drawable/name_overlay"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                   />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:maxLines="2"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/name_overlay"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:text="Shailesh1125@gmail.com"
                    android:textColor="@android:color/white"
                    android:textSize="23sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    android:background="@drawable/name_overlay"
                    android:padding="5dp"
                    android:text="Password"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   >

                    <TextView
                        android:id="@+id/password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:elevation="10dp"
                        android:layout_marginTop="5dp"
                        android:password="true"
                        android:background="@drawable/name_overlay"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:text="123456"
                        android:layout_marginEnd="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="23sp" />

                    <ImageView
                        android:id="@+id/visibility"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/name_overlay"
                        android:padding="5dp"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/visibility" /> <!-- Align the ImageView to the end -->
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</RelativeLayout>