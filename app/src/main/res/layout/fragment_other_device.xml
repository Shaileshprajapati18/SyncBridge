<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".other_device">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="10dp"
        app:fabCradleVerticalOffset="10dp"
        app:backgroundTint="@color/yellow"
        app:actionMenuTextColor="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connected device"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/star"/>

    </com.google.android.material.bottomappbar.BottomAppBar>

    <EditText
        android:id="@+id/qrCodeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Scanned QR Code Data"
        android:inputType="text"
        android:layout_below="@id/title"
        android:textColor="@color/white"
        android:textColorHint="@color/grey"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:longClickable="false"
        android:background="@color/black"
        android:padding="16dp"
        android:gravity="center_vertical"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qrCodeTextView"
        android:background="@color/black"
        tools:listitem="@layout/device_list"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/qrCodeTextView"
        android:elevation="10dp"
        android:backgroundTint="#211E1E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_view"
                android:layout_width="40dp"
                app:tint="@color/white"
                android:layout_height="40dp"
                android:src="@drawable/other_device"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/file_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Redmi not 11"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="end|center"
                android:src="@drawable/arrow"
                android:layout_margin="5dp"
                app:tint="@color/grey" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>