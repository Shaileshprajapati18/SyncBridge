<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_margin="15dp"
    android:background="#211E1E">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/edittext_overlay">
        <ImageView
            android:id="@+id/deviceImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/drive_c"
            android:scaleType="centerCrop"
            android:layout_marginTop="-10dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C:/"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/deviceImage"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="100"
            android:progressDrawable="@drawable/progress_bar_custom"
            android:layout_toEndOf="@id/deviceImage"
            android:layout_below="@id/deviceName"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:progress="50" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/deviceImage"
            android:layout_below="@id/progressBar"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/onlineStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="106 GB of 238 GB"
                android:textSize="18sp"
                android:textColor="@color/grey_shimmer"
                />

            <TextView
                android:id="@+id/onlineStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="42324 files"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:textColor="@color/grey_shimmer"
                />

        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_margin="15dp"
